{
    "version": 3,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "windows-base",
            "hidden": true,
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "x64-base",
            "hidden": true,
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "windows-base-ninja",
            "hidden": true,
            "inherits": "windows-base",
            "generator": "Ninja"
        },
        {
            "name": "windows-base-ninja-mingw",
            "hidden": true,
            "inherits": "windows-base",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "windows-base-vs2022",
            "hidden": true,
            "inherits": "windows-base",
            "generator": "Visual Studio 17 2022"
        },
        {
            "name": "linux-base-make",
            "hidden": true,
            "inherits": "base",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "debug-wn",
            "displayName": "Debug Ninja",
            "inherits": [ "windows-base-ninja", "x64-base" ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "debug-ws",
            "displayName": "Debug MSVC",
            "inherits": [ "windows-base-vs2022", "x64-base", "debug" ]
        },
        {
            "name": "debug-wm",
            "displayName": "Debug MinGW",
            "inherits": [ "windows-base-ninja-mingw", "x64-base", "debug" ]
        },
        {
            "name": "debug-lm",
            "displayName": "Debug Make",
            "inherits": [ "linux-base-make", "x64-base", "debug" ]
        },
        {
            "name": "release-wn",
            "displayName": "Release",
            "inherits": [ "debug-wn", "release" ]
        },
        {
            "name": "x86-debug-wn",
            "displayName": "x86 Debug",
            "inherits": [ "windows-base-ninja", "debug" ],
            "architecture": {
                "value": "x86",
                "strategy": "external"
            }
        },
        {
            "name": "x86-release-wn",
            "displayName": "x86 Release",
            "inherits": [ "x86-debug-wn", "release" ]
        }
    ],
    "buildPresets": [
        {
            "name": "debug-win-n",
            "displayName": "Debug Ninja",
            "configurePreset": "debug-wn"
        },
        {
            "name": "debug-win-s",
            "displayName": "Debug MSVC",
            "configurePreset": "debug-ws"
        },
        {
            "name": "debug-win-m",
            "displayName": "Debug MinGW",
            "configurePreset": "debug-wm"
        },
        {
            "name": "debug-lnx-m",
            "displayName": "Debug Make",
            "configurePreset": "debug-lm",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        }
    ]
}
